<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0d6e4"
    tools:context="com.jobemployement.karnatakaemployment.News3Activity"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#c0d6e4">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05"
            android:textAlignment="center"
            android:text="ASK YOUR MLA"
            android:textColor="#010048"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imgnews3"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.54"
            android:background="#D2d3d5"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvnews3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:autoLink="phone"
            android:background="#D2d3d5"
            android:textColor="#00321B"
            android:textSize="18sp" />





    </LinearLayout>
</ScrollView>


