<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jobemployement.karnatakaemployment.DiscussionsActivity"
    android:background="#c0d6e4"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05"
        android:text="DISCUSSIONS"
        android:textAlignment="center"
        android:textColor="#010048"
        android:textSize="30sp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"


        android:text="ನಿಮ್ಮ ಸಮಸ್ಯೆಗಳು ಅಥವಾ ಪ್ರಶ್ನೆಗಳನ್ನು ಮುಂದಿಡಲು ಕೆಳಗಿನ ಫಾರಂನಲ್ಲಿ ಬರೆಯಿರಿ.\nTo post a problems or query please fill the form "
        android:textSize="20dp" />


    <TextView

        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:autoLink="all"
        android:clickable="true"
        android:text="https://goo.gl/forms/CHx3xLPLDbu1lO5T2"
        android:textAlignment="center"
        android:textColor="#f25f10"
        android:textSize="18sp" />



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="ನಿಮ್ಮ ಅನಿಸಿಕೆಗಳನ್ನು ತಿಳಿಸಲು, ಈ ಕುರಿತು ನಡೆಯುತ್ತಿರುವ ಚರ್ಚೆಗಳಲ್ಲಿ ಭಾಗವಹಿಸಲು ಕೆಳಗಿನ ಲಿಂಕನ್ನು ಒತ್ತಿರಿ.\nTo post your opinions and to view/participate in the discussions please click on the following link"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"

        android:textSize="20dp"
        android:layout_weight="0.18" />


    <TextView

        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:text="k4edicussions.blogspot.com"
        android:autoLink="all"
        android:clickable="true"
        android:textColor="#f25f10"
        android:textSize="18sp" />





</LinearLayout>
