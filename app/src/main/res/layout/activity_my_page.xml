<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jobemployement.karnatakaemployment.MyPage"
    android:weightSum="1"
    android:background="#d2d3d5"
    >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="MY CV \nನನ್ನ ಬಯೋಡಾಟಾ"
        android:textSize="36sp"
        android:textColor="#010048"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>


    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="NAME/ಹೆಸರು "
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="AGE/ವಯಸ್ಸು "
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_district"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="DISTRICT/ಜಿಲ್ಲೆ "
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_mla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="MLA CONSTITUENCY/ವಿಧಾನಸಭಾ ಕ್ಷೇತ್ರ "
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_edu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="EDUCATIONAL QUALIFICATIONS/ವಿದ್ಯಾರ್ಹತೆ "
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="SKILLS/ಕೌಶಲ್ಯಗಳು "
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009E8E"
        android:layout_marginBottom="10dp"
        android:text="update page" />

    <!--<Button-->
        <!--android:id="@+id/btn_page"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="#009E8E"-->
        <!--android:text="page" />-->

</LinearLayout>


